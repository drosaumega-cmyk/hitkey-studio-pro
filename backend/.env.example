# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
ENVIRONMENT=development
API_URL=https://api.aiaudiostudio.pro
FRONTEND_URL=https://aiaudiostudio.pro

# Authentication
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_EXPIRATION=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Database (D1)
# These are configured in wrangler.toml, but kept here for reference
# D1_DATABASE_ID=your-d1-database-id
# D1_DATABASE_NAME=ai-audio-studio-db

# KV Storage
# These are configured in wrangler.toml, but kept here for reference
# SESSIONS_KV_ID=your-sessions-kv-id
# CACHE_KV_ID=your-cache-kv-id

# Email Configuration (for future implementation)
EMAIL_FROM=noreply@aiaudiostudio.pro
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Monitoring (for future implementation)
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=info

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_SOCIAL_VERIFICATION=false
ENABLE_ANALYTICS=true
ENABLE_WEBHOOK_RETRY=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=10
PAYMENT_RATE_LIMIT_MAX_REQUESTS=5

# Security
CORS_ORIGIN=https://aiaudiostudio.pro
ALLOWED_ORIGINS=https://aiaudiostudio.pro,https://www.aiaudiostudio.pro,http://localhost:5173